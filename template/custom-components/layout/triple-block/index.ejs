<%
const skus = ['PG-RT36WBN-30X60-KIT50', 'ARA-5WBQ-PT-KIT10', 'XL-5050VE-KIT1', 'PS-R25WBF-KIT20'];
const search = new _.EcomSearch()
let items = [];

try {
    await search.setSkus(skus).setSortOrder('news').fetch(true)

    items = search.getItems().filter(item => _.ecomUtils.inStock(item))
} catch (err) {
    console.error(err)
}

const dataTripleBlockProducts = {
    items,
    slideOptions: {
        navigation: 'default',
        slidesPerView: 1,
        spaceBetween: 0,
    }
}
%>

