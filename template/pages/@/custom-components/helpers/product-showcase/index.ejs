                        </div>
                    <% } %>

                    <div class="product-showcase-title-text">
                        <strong><%= data.title %></strong>
                    </div>
                </div>
                
                <div class="product-showcase-title-wrapper">
                    <% if (data.countdownTitle) { %>
                        <div class="product-showcase-title-countdown">
                            <div class="product-showcase-title-countdown-wrapper">
                                <div class="product-showcase-title-countdown-text">
                                    <%= data.countdownTitle %>
                                </div>
                                
