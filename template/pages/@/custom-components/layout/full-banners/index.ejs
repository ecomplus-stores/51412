let bannersDesktop = '';
let bannersMobile = '';

if (_.pageName == 'home') {
    bannersDesktop = banners.desktop.home;
    bannersMobile = banners.mobile.home;
} else if (_.pageName == 'categories') {
    bannersDesktop = banners.desktop.categories['/' + _.state.slug] || [];
    bannersMobile = banners.mobile.categories['/' + _.state.slug] || [];
}
%>

<% if (bannersDesktop) { %>
    <div class="full-banners d-none d-md-block">
        <div class="container">
            <div class="swiper" data-start-only-device="desktop" data-slide-options='<%- JSON.stringify(slideOptions) %>'>
                <div class="swiper-clip">
                    <div class="swiper-wrapper">
                        <% for (let i = 0; i < bannersDesktop.length; i++) { %>
                            <div class="swiper-slide">
                                <a href="<%= bannersDesktop[i].href %>">
                                    <%- await include('@/custom-components/helpers/image/index', {
                                        data: {
                                            src: bannersDesktop[i].src,
                                            alt: bannersDesktop[i].alt,
                                            lazy: bannersDesktop[i].lazy == false ? false : true,
                                        }
                                    }) %>
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <div class="swiper-button-next"></div>
                    <div class="swiper-button-prev"></div>
                    <div class="swiper-pagination"></div>
                </div>
            </div>
        </div>
    </div>
<% } %>

<% if (bannersMobile) { %>
    <div class="full-banners d-md-none d-block">
        <div class="container">
