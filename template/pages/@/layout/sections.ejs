<article id="content" class="page page--<%= _.pageName %>">
    <div class="sections pb-1 pb-sm-2 pb-lg-4">
        <%
            const { sections } = _.state
            if (Array.isArray(sections)) {
                for (let i = 0; i < sections.length; i++) {
                    const opt = sections[i]
                    if (opt && opt.enabled !== false) {
        %>
                        <%- await include(`@/sections/${opt.type}`, { _, opt }) %>

                        <% if (_.pageName === 'home' && opt.type === 'collection-shelf') { %>
                            <%- await include('@/custom-components/skus', {
                                skus: ['PG-RT36WBN-30X60-KIT50', 'ARA-5WBQ-PT-KIT10', 'XL-5050VE-KIT1', 'PS-R25WBF-KIT20'],
                                opt
                            }) %>
                        <% } %>

                        <% if (_.pageName === 'home' && opt.type === 'banner-slider') { %>
                            <%- await include('../custom-components/layout/information-bar/index') %>
                            <%- await include('../custom-components/layout/triple-block/index') %>
                            <%- await include('../custom-components/layout/horizontal-banners/index') %>
                            <%- await include('../custom-components/layout/mini-banners/index') %>
                        <% } %>
        <%          
                    }
                }
            }
        %>
    </div>
</article>
